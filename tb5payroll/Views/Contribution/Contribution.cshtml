@{
    Layout = "_ContributionLayout";
    ViewBag.Title = "Contribution";
}
<h2 class="text-left mb-3 fs-4 fw-bold">Contributions</h2>

<!-- Search Bar & Controls -->
<div class="d-flex justify-content-between align-items-center p-2 shadow-sm rounded bg-light border">
    <input type="text" id="searchInput" class="form-control form-control-sm w-25 border-primary"
           placeholder="🔍 Search Employee..." onkeyup="searchEmployee()">
    
</div>
<!-- Contribution Form (Landscape Mode) -->
<div class="container d-flex justify-content-center align-items-center ">
    <div class="card p-1 shadow-lg border-primary rounded w-75">
        <h5 class="text-center fw-bold mb-1 text-primary">Contribution Rates</h5>

        <div class="d-flex flex-wrap justify-content-between gap-0">
            <div class="input-group">
                <span class="input-group-text bg-primary text-white fw-bold">W/H TAX</span>
                <input type="text" id="wh-tax" class="form-control form-control-sm border-primary" placeholder="%/FLAT RATE">
            </div>

            <div class="input-group">
                <span class="input-group-text bg-primary text-white fw-bold">PAG-IBIG</span>
                <input type="text" id="pag-ibig" class="form-control form-control-sm border-primary" placeholder="%/FLAT RATE">
            </div>

            <div class="input-group">
                <span class="input-group-text bg-primary text-white fw-bold">SSS</span>
                <input type="text" id="sss" class="form-control form-control-sm border-primary" placeholder="%/FLAT RATE">
            </div>

            <div class="input-group">
                <span class="input-group-text bg-primary text-white fw-bold">TARDINESS</span>
                <input type="text" id="tardiness" class="form-control form-control-sm border-primary" placeholder="%/FLAT RATE">
            </div>

            <div class="input-group">
                <span class="input-group-text bg-primary text-white fw-bold">LOAN</span>
                <input type="text" id="loan" class="form-control form-control-sm border-primary" placeholder="%/FLAT RATE">
            </div>

            <div class="input-group">
                <span class="input-group-text bg-primary text-white fw-bold">OTHERS/CA</span>
                <input type="text" id="others" class="form-control form-control-sm border-primary" placeholder="%/FLAT RATE">
            </div>
        </div>

        <!-- Save Button -->
        <div class="text-center mt-3">
            <button class="btn btn-primary w-100 fw-bold">Save Changes</button>
        </div>
    </div>
</div>
